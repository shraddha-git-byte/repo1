global
   log 127.0.0.1:514 local0 info
   chroot /var/lib/haproxy
   stats timeout 30s
   user haproxy
   maxconn 8000
   group haproxy
   daemon

defaults
   log global
   mode http
   maxconn 8000
   option httplog
   option dontlognull
   timeout connect 5000
   timeout client 50000
   timeout server 50000

frontend http_front
   acl network_allowed src 0.0.0.0/0
   bind *:80
   bind *:443 ssl crt /etc/ssl/certs/gsys-ticketing.kbzbank.com no-sslv3 no-tlsv10
   redirect scheme https if !{ ssl_fc }
   default_backend http_backend
   option httplog
   log global
backend http_backend
   balance leastconn
   cookie SERVERUSED insert indirect nocache
   timeout queue 10
   server vlticpro-02.kbzbank.com  10.11.37.108:443 cookie vlti check ssl verify none 
   server vlticpro.kbzbank.com 10.11.37.116:443 cookie gsys check ssl verify none

 listen stats
   bind *:3001
   stats enable
   stats uri /
   stats realm Haproxy\ Statistics
   stats auth admin:Gene$y$@dm!n
